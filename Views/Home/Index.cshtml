@model ObiletCase.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Home";
}

<h2>Select Your Journey</h2>

<form asp-controller="Journey" asp-action="Index" method="get">
    <input type="hidden" name="sessionId" value="@Model.SessionId" />

    <label>Origin:</label>
    <select name="originId" required>
        @foreach (var loc in Model.AllLocations)
        {
            <option value="@loc.Id">@loc.Name</option>
        }
    </select>

    <label>Destination:</label>
    <select name="destinationId" required>
        @foreach (var loc in Model.AllLocations)
        {
            <option value="@loc.Id">@loc.Name</option>
        }
    </select>

    <label>Departure Date:</label>
    <input type="date" name="departureDate" value="@Model.DepartureDate.ToString("yyyy-MM-dd")" required />

    <button type="submit">Search</button>
</form>